{
	"name": "handler-agent",
	"version": "0.2.0",
	"description": "Zero-dependency (req,res) handler callback agent for use in client requests",
	"main": "index.js",
	"repository": "qix-/handler-agent",
	"scripts": {
		"test": "best -v -I test/*.js",
		"format": "prettier --write --ignore-path .gitignore .",
		"lint": "prettier --check --ignore-path .gitignore .",
		"lint:commit": "commitlint -x @commitlint/config-conventional --edit",
		"format:staged": "pretty-quick --staged"
	},
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"http",
		"agent",
		"server",
		"api",
		"tests",
		"testing",
		"tester",
		"handler",
		"rest",
		"endpoint"
	],
	"author": "Josh Junon <josh@junon.me>",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "16.1.0",
		"@commitlint/config-conventional": "16.0.0",
		"@vercel/git-hooks": "1.0.0",
		"@zeit/best": "0.6.1",
		"got": "11.0.3",
		"prettier": "2.5.1",
		"pretty-quick": "3.1.3"
	},
	"publishConfig": {
		"access": "public",
		"tag": "latest"
	},
	"git": {
		"pre-commit": "format:staged",
		"commit-msg": "lint:commit"
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"trailingComma": "none",
		"arrowParens": "avoid",
		"requirePragma": false,
		"insertPragma": false,
		"endOfLine": "lf"
	}
}
